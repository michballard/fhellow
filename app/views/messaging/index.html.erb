
<h2 class="message-list">Messages</h2>
<section class="message-container">
<% @messages.each do |message| %>
  <div id='each-message'
  <p id="message-who"><% if current_user.id == message.from_id %>
    <%= "#{User.find_by_id(message.to_id).name_first}" + " " + "#{User.find_by_id(message.to_id).name_last}" %></p>
  <% else %>
    <p id="message-who"><%= link_to "#{User.find_by_id(message.from_id).name_first}" + " " + "#{User.find_by_id(message.from_id).name_last}" %></p>
  <% end %>
  <%= link_to "View Conversation", conversation_path(message.to_id), id: 'convo-link' %>
  <% date_time = message.created_at %>
    <p id="time-sent"><%= date_time.strftime("%B %d, %Y %l:%M %p") %></p>
    <p id="message"><%= "#{message.message}" %></p>
</div>
<% end %>
</section>

