<h1 class="chatbox">
  Conversation
</h1>
<div id="chatbox">
  <% @message.each do |m| %>
    <div class="from">
      <% if current_user.id == m.from_id %>
        <h2 id="you">
          You
        </h2>
      <% else %>
        <h2 id="them">
          Them
        </h2>
      <% end %>
    </div>
    <div class="message">
      <%= m.message  %>
      <%= m.seen ? "seen" : "sent"  %>
    </div>
  <% end %>
</div>
<%= form_tag("/message/#{@to}") do  %>
  <%= text_area_tag(:message)  %>
  <%= submit_tag("Send")  %>
<% end %>
