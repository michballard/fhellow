<%= form_for [@user, @post] do |f| %>

	<h4><%= f.label :content %></h4>
	<p><%= f.text_area :content %></p>

  <div id='latlng'><%= f.label :add_current_location %></div>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>

	<h4><%= f.label :image %></h4>
	<p><%= f.file_field :image%></p>

	<p><%= f.submit "Post" %></p>

<% end %>
