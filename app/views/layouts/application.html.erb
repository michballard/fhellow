<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fhellow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Lato:400,700,400italic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1 id="logo"><a class="navbar-brand" href="/"><img src="/assets/logo.png"><span>FHELLOW</span></a></h1>
        </div>
        <div class="navbar-collapse collapse">

          <ul class="nav navbar-nav navbar-right">
    <% unless current_user %>
      <li><a href="#"><i class="fa fa-lightbulb-o"></i>About</a></li>
    <% end %>
  <li><%= link_to activity_path(current_or_guest_user) do %>
    <i class="fa fa-newspaper-o"></i>
    Activity
    <% end %>
  </li>
    <% if current_user %>
    <li><%= link_to new_user_post_path(current_user) do %>
      <i class="fa fa-pencil"></i>
      Post
      <% end %>
    </li>
    <li><%= link_to messages_path do %>
      <i class="fa fa-envelope"></i>
      Messages
      <% end %>
    </li>
    <% if current_user.name_first? %>
      <li>
        <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i><%= current_user.name_first %></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "My profile", user_profile_path(@user.id) %></li>
                <li><%= link_to "Edit my profile", edit_profile_path(@user.id) %></li>
                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
      </li>
    <% else %>
      <li>
      <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>My profile</a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "My profile", user_profile_path(@user.id) %></li>
                <li><%= link_to "Edit my profile", edit_profile_path(@user.id) %></li>
                <li><a href="#">Settings</a></li>
                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
      </li>
    <% end %>
  <%else%>
  <li class="account-manage"><%= button_to "Join", new_user_registration_path %></li>
  <li class="account-manage"><%= button_to "Log in", new_user_session_path %></li>

<% end %>
  </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>


<% if flash[:notice]%>
	<div id="notice"><p>
	<%= flash[:notice]%></p>
	</div>
<% end %>

<%= yield %>

<div class="footer">
  <div class="footer-container">
    <p>Fhellow</p>
    <p>&copy;</p>
    <ul>
      <li>About</li>
      <li>Team</li>
    </ul>
  </div>
</div>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
