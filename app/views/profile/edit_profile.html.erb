<%= form_for @user do |f| %>

	<div><%=f.label :"first name" %>
		<%= f.text_field :name_first, autofocus: true %>
		<%=f.label :"last name" %>
		<%=f.text_field :name_last %>
	</div>

	<div>
		<%= f.label :email %>
		<%=f.email_field :email %>
	</div>

	<div>
		<%=f.label :"job title" %>
		<%=f.text_field :job_title %>
    <%=f.select(:user_type, [['Freelancer'],['Entrepreneur']])%>
	</div>

  <div>
  	<%= f.label :location %>
  	<%= f.text_field :country, placeholder: 'United Kingdom' %>
  	<%= f.text_field :town, placeholder: 'London' %>
  </div>

  <div>
  	<%= f.label :website %>
  	<%= f.text_field :website %>
  	<%= f.label :linkedin %>
  	<%= f.text_field :linkedin %>
  </div>

	<div>
		<%=f.label :bio %>
		<%= f.text_field :bio%>
	</div>

    <div>
        <%= f.check_box(:discussing_ideas) %>
        <%= f.label(:discussing_ideas, "Discussing ideas") %>
        <%= f.check_box(:afterwork_drinks) %>
        <%= f.label(:afterwork_drinks, "Afterwork drinks") %>
        <%= f.check_box(:collaborating) %>
        <%= f.label(:collaborating, "Collaborating") %>
        <%= f.check_box(:chat_over_a_coffee) %>
        <%= f.label(:chat_over_a_coffee, "Chat over a coffee") %>
        <%= f.check_box(:lunch_buddy) %>
        <%= f.label(:lunch_buddy, "Lunch buddy") %>
        <%= f.check_box(:advising) %>
        <%= f.label(:advising, "Advising") %>
    </div>

	<div>
		<%= f.label :"profile picture" %>
		<%= f.file_field :avatar %>
	</div>

	<div>
	<%= f.submit :"Confirm profile details"%>
	</div>
  <%if @user.name_first %>
  <%= link_to "Account settings", edit_user_registration_path %>
  <%end%>

<%end%>
