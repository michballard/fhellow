<%= form_for @user do |f| %>

	<div><%=f.label :"first name" %>
		<%= f.text_field :name_first, autofocus: true %>
		<%=f.label :"last name" %>
		<%=f.text_field :name_last %>
	</div>

	<div>
		<%= f.label :email %>
		<%=f.email_field :email %>
	</div>

	<div>
		<%=f.label :"job title" %>
		<%=f.text_field :job_title %>
    <%=f.select(:user_type, [['Freelancer'],['Entrepreneur']])%>
	</div>

  <div>
  	<%= f.label :location %>
  	<%= f.text_field :town, placeholder: 'London' %>
  	<%= f.text_field :country, placeholder: 'United Kingdom' %>
  </div>

  <div>
  	<%= f.label :website %>
  	<%= f.text_field :website %>
  	<%= f.label :linkedin %>
  	<%= f.text_field :linkedin %>
  </div>

	<div>
		<%=f.label :bio %>
    <p>Tell us a bit about what you've been up to</p>
		<%= f.text_area :bio%>
	</div>

    <div>
        <%= f.check_box(:discussing_ideas) %>
        <%= f.label(:discussing_ideas, "Discussing ideas") %>
        <%= f.check_box(:afterwork_drinks) %>
        <%= f.label(:afterwork_drinks, "Afterwork drinks") %>
        <%= f.check_box(:collaborating) %>
        <%= f.label(:collaborating, "Collaborating") %>
        <%= f.check_box(:chat_over_a_coffee) %>
        <%= f.label(:chat_over_a_coffee, "Chat over a coffee") %>
        <%= f.check_box(:lunch_buddy) %>
        <%= f.label(:lunch_buddy, "Lunch buddy") %>
        <%= f.check_box(:advising) %>
        <%= f.label(:advising, "Advising") %>
    </div>

	<div>
		<%= f.label :"profile picture" %>
		<%= f.file_field :avatar %>
    <div class='input-append'>
           <a class='fontawesome-picture' onclick="$('input[id=user_avatar]').click();"><i class='fa fa-picture-o'></i></a>
            <input class='input-small' type='text'>
         </div>
         <script type='text/javascript'>
          $('input[id=user_avatar]').change(function() {
          $('.input-small').val($(this).val());
          });
         </script>
	</div>

	<div>
	<%= f.submit :"Confirm profile details"%>
	</div>
  <%if @user.name_first %>
  <%= link_to "Account settings", edit_user_registration_path %>
  <%end%>

<%end%>
