<div id="profile_page_posts" class="modal fade" tabindex="-101" data-container="body" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" ></div>

<section class="cover-image">
</section>
  <%= image_tag @user.avatar.url(:medium), class: "avatar" %>
<article class="profile-main">
  <section id="user-info" class="col-md-4">
    <article class="user-name">
      <h3><%= @user.name_first%> <%= @user.name_last %></h3>

      <p><%= @user.job_title %></p>
      <% if @user.town && @user.country %>
        <p><%= @user.town%>, <%= @user.country %></p>
      <% else %>
        <p><%= @user.town %></p>
      <%end%>
    </article>

<button class="message-user"><i class="fa fa-envelope"></i><%= link_to "Message", send_message_path(@user.id) %></button>

<% if current_user && current_user.follows?(@user) %>
	<button class="profile-following">
		<a href=<%="/user/#{@user.id}/follow/#{current_user.id}"%> class="profile-follow-toggle" id="toggle-following">Following</a>
	</button>
<%elsif current_user %>
	<button class="profile-follow">
			<i class="fa fa-plus"></i><a href=<%="/user/#{@user.id}/follow/#{current_user.id}"%> class="profile-follow-toggle" id="toggle-follow">Follow</a>
	</button>
<% end %>

    <article class="user-bio">
      <p><%= @user.bio %></p>
      <p><%= @user.website %></p>
      <p><%= @user.linkedin %></p>
      </article>

<ul>
  <% if @user.discussing_ideas == true %>
  <li>Discussing ideas</li>
  <% end %>
  <% if @user.afterwork_drinks == true %>
  <li>Afterwork drinks</li>
  <% end %>
  <% if @user.collaborating == true %>
  <li>Collaborating</li>
  <% end %>
  <% if @user.chat_over_a_coffee == true %>
  <li>Chat over a coffee</li>
  <% end %>
  <% if @user.lunch_buddy == true %>
  <li>Lunch buddy</li>
  <% end %>
  <% if @user.advising == true %>
  <li>Advising</li>
  <% end %>
</ul>

<p><span class="follower-count"><%= pluralize(@user.followers(User).count, "Follower") %></span></p>
<p><span class="following-count"><%= @user.followees(User).count %></span> Following</p>

<% if current_user && current_user.id == @user.id %>
  <p><%= link_to "Current status", new_user_status_path(@user.id) %></p>
<% else %>
  <p>Current status</p>
<% end %>

<% if @user.statuses.any? %>
  <p><%= @user.statuses.last.current_status %></p>
  <p><%= time_ago_in_words(@user.statuses.last.created_at) %> ago</p>
<% else %>
   <p>No status set</p>
<% end %>

<% if @user.posts.any? %>
  <%= render @user.posts.reverse %>
<% else %>
   <p>No posts yet</p>
<% end %>
</section>

<section class="col-md-8" id="profile-posts">
  <article class="post" id="intro-post">
   <h2> Congratulations - you are now Fhellow! </h2>
   <h3> Where would you like to go now? </h3>
  <ul>
   <li><%= link_to "See what's going on in the community", activity_user_path(@user.id) %></li>
   <li><%= link_to "Find other Fhellows", homepage_index_path %></li>
   <li><%= link_to "Create a post or status", new_user_post_path(@user.id), {:remote => true, 'data-keyboard' => true, 'data-toggle' =>  "modal", 'data-target' => '#posts'}  %></li>
   <li><%= link_to "Edit your profile", edit_profile_path(@user.id) %> </li>
  </ul>
  </article>
</section>
</article>
