<article class="signin-up">
<h2 class="signin-up-heading">Welcome back! Please log in.</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<p class="signin-up-divider"><span>Or</span></p>
  <div class="email-signin-up"><%#= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, placeholder: "Email"  %></div>

  <div class="password-signin-up"><%#= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password"  %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", class:"log-in-button" %></div>
<%= render "devise/shared/links" %>

<% end %>

</article>
